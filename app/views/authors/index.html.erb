<h1>Authors</h1>

<table>
  <tr>
    <th>Name</th>
    <th>Homepage</th>
    <th></th>
  </tr>

  <% @authors.each do |author| %>
    <tr>
      <td><%= link_to author.name, author_path(author) %></td>
      <td><%= author.homepage %></td>
    </tr>
  <% end %>
</table>

<form method="get" action = "authors/new">
  <button type="button_to"> <%= I18n.t 'authors.create.title' %> </button>
</form>

